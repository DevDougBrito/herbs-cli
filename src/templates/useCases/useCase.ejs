const { usecase, step, Ok, Err } = require('buchu')
const { <%= props.entity %> } = require('../entities>')

const useCase = () =>
  usecase('Create <%= props.entity %>', {
    // Input/Request metadata and validation 
    request: <%= props.request %>,


    // Output/Response metadata
    // response: TodoList,

    // Pre-run setup
    // setup: ctx => (ctx.di = Object.assign({}, dependency, injection)),

    // Authorization with Audit
    // authorize: user => (user.canCreateList ? Ok() : Err()),

    //Step description and function
    'Check if the <%= props.entity %> is valid': step(ctx => {
      ctx.<%= props.lowerCaseEntity %> = <%= props.entity %>.fromJSON(<%- props.example %>)

      if (!ctx.<%= props.lowerCaseEntity %>.isValid()) return Err(ctx.<%= props.lowerCaseEntity %>.errors)
      return Ok() // returning Ok continues to the next step. Err stops the use case execution.
    }),
  })

module.exports.createList = useCase