const { Err } = require('buchu')
// const { logger } = require('../../libs/logger')

const defaultMsg  = (entityName) => `${entityName} <%= props.defaultMsg %>`

function <%= props.name %>Error (entityName, message = null, stackTrace) {
  // logger.error(message, new Error(stackTrace)) 
  return Err({ 
    code: `${entityName}_<%= props.code %>`.toUpperCase(),
    message: message || defaultMsg(entityName), 
    stackTrace 
  })
}

module.exports = <%= props.name %>Error
module.exports.<%= props.name %>Error = <%= props.name %>Error
