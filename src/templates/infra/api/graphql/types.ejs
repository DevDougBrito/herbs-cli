const { entity2type } = require('herbs2gql')
const entities = require('../../../domain/entities')

const converto2Type = (entity) => {
  let type = entity2type(entities[entity])
  if(type.includes('Input')) type = type.replace('type', 'input')
  return [type]
}
const defaultSchema = [`
  type Query {
    _: Boolean
  }

  type Mutation {
    _: Boolean
  }`]

Object.keys(entities).map(entity => [entity2type(entities[entity])])

const types = [defaultSchema].concat(Object
                                .keys(entities)
                                .map(converto2Type))

module.exports = types