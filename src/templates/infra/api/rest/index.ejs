    prepareUsecases(usecases).then(async usecases => {
        const shelf = renderShelfHTML(usecases)
        app.get('/herbsshelf', (_, res) => {
            res.setHeader('Content-Type', 'text/html')
            res.write(shelf)
            res.end()
